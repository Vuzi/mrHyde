{
  "name": "mister_hyde",
  "version": "0.1.7",
  "description": "MrHyde is a lightweight and simple static website generator using Liquid and Markdown templates.",
  "main": "./dist/mrHyde.js",
  "bin": {
    "mrHyde": "./dist/mrHyde.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vuzi/mrHyde.git"
  },
  "scripts": {
    "build": "tsc --build && tsc-alias",
    "start": "tsc --build && tsc-alias && node ./dist/mrHyde.js",
    "clean": "rm -rf node_modules && rm -rf dist && rm out && rm example-dist",
    "reinstall": "npm run clean && npm install",
    "test": "tsc-alias && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage=true --coverageReporters='text-summary'"
  },
  "author": "Guillaume Villerez",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.4.0",
    "@types/marked": "4.0.1",
    "@types/mock-fs": "4.13.1",
    "@types/node": "17.0.9",
    "@types/yargs": "17.0.8",
    "jest": "27.4.7",
    "mock-fs": "5.1.2",
    "terminal-link": "3.0.0",
    "ts-jest": "27.1.3",
    "tsc-alias": "1.5.0",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "chokidar": "3.5.2",
    "fs-extra": "10.0.0",
    "http-expose": "0.2.4",
    "liquidjs": "9.32.1",
    "marked": "4.0.10",
    "yaml": "1.10.2",
    "yargs": "17.0.1"
  }
}
