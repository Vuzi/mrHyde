{
  "name": "mr-hyde",
  "version": "1.0.11",
  "description": "MrHyde is a lightweight and simple static website generator using Liquid and Markdown templates.",
  "main": "./dist/mrHyde.js",
  "bin": {
    "mrHyde": "./dist/mrHyde.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vuzi/mrHyde.git"
  },
  "scripts": {
    "build": "tsc --build && tsc-alias",
    "start": "tsc --build && tsc-alias && node ./dist/mrHyde.js",
    "clean": "rm -rf node_modules && rm -rf dist && rm out && rm example-dist",
    "reinstall": "npm run clean && npm install",
    "test": "tsc-alias && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage=true --coverageReporters='text-summary'"
  },
  "author": "Guillaume Villerez",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/marked": "^2.0.3",
    "@types/mock-fs": "^4.13.0",
    "@types/node": "^15.6.0",
    "@types/yargs": "^17.0.0",
    "jest": "^27.0.1",
    "mock-fs": "^5.0.0",
    "terminal-link": "^2.1.1",
    "ts-jest": "^27.0.0",
    "tsc-alias": "^1.2.11",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "fs-extra": "^10.0.0",
    "liquidjs": "^9.25.0",
    "marked": "^2.0.5",
    "yaml": "^1.10.2",
    "yargs": "^17.0.1"
  }
}
